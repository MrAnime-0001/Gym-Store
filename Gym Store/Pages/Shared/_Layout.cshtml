<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gym_Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gym_Store.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

    @using Microsoft.AspNetCore.Identity
    @using System.Security.Claims
    @inject SignInManager<IdentityUser> SignInManager
    @inject UserManager<IdentityUser> UserManager


    <style>
        /* Navbar background gradient */
        .navbar {
            background: linear-gradient(to right, #006064, #ff7043); /* Cyan to Orange gradient */
        }

        /* Centering nav items */
        .navbar-nav {
            flex-direction: row;
            justify-content: center; /* Center navbar links */
            width: 100%;
        }

        .navbar-nav .nav-item {
            padding: 0 20px; /* Padding between links */
        }

        /* Style for navbar links */
        .nav-link {
            font-weight: bold;
            color: white !important;
            transition: color 0.3s ease, background-color 0.3s ease;
        }

        .nav-link:hover {
            color: #ff7043 !important; /* Hover effect: orange color */
            background-color: rgba(255, 255, 255, 0.2); /* Light transparent background */
        }

        /* Navbar brand (logo) */
        .navbar-brand {
            color: white !important;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .navbar-toggler-icon {
            background-color: white !important; /* Make the toggle icon white */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-5">
            <div class="container-fluid">
                <div class="collapse navbar-collapse w-100" id="navbarNav">
                    <div class="d-flex w-100 justify-content-between align-items-center">

                        <!-- Spacer to push center content to center -->
                        <div class="d-none d-sm-block" style="width: 1650px;"></div>

                        <!-- Centered links -->
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Products/Index">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                        </ul>

                        <!-- Login/Register or Logout at far right -->
                        <ul class="navbar-nav">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark">Hello, @User.Identity?.Name!</a>
                                </li>
                                <li class="nav-item">
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm">
                                        <button type="submit" class="nav-link btn btn-link text-dark" style="text-decoration: none;">Logout</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center">
            This website was created by Yutti Vong Chylong. <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
