@page
@model Gym_Store.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Product List";
}

<div class="container my-4">
    <div class="row mb-3">
        <div class="col">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col text-end">
            <a asp-page="/Products/Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> New Product
            </a>
        </div>
    </div>

    <div class="row">
        @if (Model.ProductList != null && Model.ProductList.Any())
        {
            @foreach (var p in Model.ProductList)
            {
                <div class="col-12 col-sm-6 col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@(p.ImageUrl ?? "/images/placeholder.png")"
                             class="card-img-top"
                             alt="@p.Name"
                             style="object-fit:cover; height:200px;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@p.Name</h5>
                            <p class="card-text mb-1">
                                <strong>Price:</strong> @p.Price.ToString("C")<br />
                                <strong>Quantity:</strong> @p.Quantity
                            </p>
                            <button type="button"
                                    class="btn btn-success mt-auto purchase-btn"
                                    data-product="@p.Name">
                                Purchase Product
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col">
                <div class="alert alert-warning">
                    No products available.
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.purchase-btn').forEach(btn => {
            btn.addEventListener('click', e => {
                var productName = e.currentTarget.getAttribute('data-product');
                alert(`Thank you for “purchasing” ${productName}! This is just a demo.`);
            });
        });
    </script>
}
