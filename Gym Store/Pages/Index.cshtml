@page
@model Gym_Store.Pages.IndexModel
@{
    ViewData["Title"] = "Home - Gym_Store";
}

<style>
    /* Body: soft cyan gradient */
    body {
        background: linear-gradient(to right, #e0f7fa, #b2ebf2);
    }

    /* Card: warm light orange */
    .product-card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        background-color: #fff3e0;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    }

    /* Image container: neutral warm grey to pop the image */
    .product-img-container {
        height: 200px;
        background: #ffe0b2;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-card .card-body {
        background-color: #fff8e1;
        color: #3e2723;
    }

    .product-card .card-footer {
        background-color: #ffe0b2;
    }

    /* Purchase button: deep orange */
    .btn-success {
        background-color: #ff7043;
        border-color: #ff7043;
        border-radius: 20px;
        padding: 0.5rem 1.5rem;
        transition: background-color 0.2s ease;
    }
    .btn-success:hover {
        background-color: #f4511e;
        border-color: #f4511e;
    }

    /* Heading accent: deep cyan */
    h1.page-title {
        color: #006064;
    }
</style>

<h1 class="page-title text-center mb-5">🌟 Our Featured Products 🌟</h1>

<div class="container">
    <div class="row">
        @foreach (var product in Model.ProductList)
        {
            <div class="col-md-4 mb-4">
                <div class="card product-card">
                    <div class="product-img-container">
                        <img src="@product.ImageUrl"
                             alt="@product.Name"
                             class="img-fluid"
                             style="max-height: 100%; max-width: 100%; object-fit: contain;" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@product.Name</h5>
                        <p class="card-text mb-2">
                            <strong>Price:</strong> $@product.Price <br />
                            <strong>Quantity:</strong> @product.Quantity <br />
                            <strong>Type:</strong> @product.Type
                        </p>
                    </div>
                    <div class="card-footer text-center">
                        <button class="btn btn-success" onclick="showPurchaseAlert('@product.Name')">
                            Purchase
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function showPurchaseAlert(productName) {
            toastr.success(`Pretend purchased "${productName}"!`);
        }
    </script>
}
