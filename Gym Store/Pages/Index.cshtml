@page
@model Gym_Store.Pages.IndexModel
@{
    ViewData["Title"] = "Home - Gym_Store";
}

<h1 class="text-primary text-center mb-4">Our Products</h1>

<div class="row">
    @foreach (var product in Model.ProductList)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="object-fit: cover; height: 200px;">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">
                        <strong>Price:</strong> $@product.Price <br />
                        <strong>Quantity:</strong> @product.Quantity
                    </p>
                </div>
                <div class="card-footer text-center">
                    <button class="btn btn-success" onclick="showPurchaseAlert('@product.Name')">Purchase</button>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function showPurchaseAlert(productName) {
            toastr.success(`Pretend purchased "${productName}"!`);
        }
    </script>
}
