@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container bg-light p-4 rounded shadow-sm mt-4">
    <h1 class="text-custom py-3">@ViewData["Title"]</h1>

    <p class="text-muted">This website was made by Yutti Vong Chylong</p>
</div>

<style>
    .container.bg-light {
        background-color: #fff8e1; /* Light cream background */
    }

    h1.text-custom {
        color: #ff7043; /* Orange color for the page title */
    }

    .text-muted {
        color: #757575; /* Muted text color for less important content */
    }

    h4.text-custom {
        color: #ff7043; /* Same orange for section headers */
    }

    /* Optional styling for the page content */
    .container {
        max-width: 900px;
    }
</style>
