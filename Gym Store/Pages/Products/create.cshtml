@page
@model Gym_Store.Pages.Products.CreateModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-white py-2">Create Product</h2>
            <hr />
        </div>

        <!-- Validation Summary -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Product Name -->
        <div class="mb-3 row">
            <label asp-for="Product.Name" class="col-form-label"></label>
            <input asp-for="Product.Name" class="form-control" />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <!-- Product Type -->
        <div class="mb-3 row">
            <label asp-for="Product.Type" class="col-form-label"></label>
            <input asp-for="Product.Type" class="form-control" />
            <span asp-validation-for="Product.Type" class="text-danger"></span>
        </div>

        <!-- Product Price -->
        <div class="mb-3 row">
            <label asp-for="Product.Price" class="col-form-label"></label>
            <input asp-for="Product.Price" class="form-control" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <!-- Product Quantity -->
        <div class="mb-3 row">
            <label asp-for="Product.Quantity" class="col-form-label"></label>
            <input asp-for="Product.Quantity" class="form-control" />
            <span asp-validation-for="Product.Quantity" class="text-danger"></span>
        </div>

        <!-- Product Image URL -->
        <div class="mb-3 row">
            <label asp-for="Product.ImageUrl" class="col-form-label"></label>
            <input asp-for="Product.ImageUrl" class="form-control" />
            <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Products/Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
